{
  "version": 2,
  "buildCommand": "npx vite build --config vite.config.ts",
  "outputDirectory": "dist/public",
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/assets/.*",
      "dest": "/assets/$1"
    },
    {
      "src": ".*\\.js",
      "dest": "/$1"
    },
    {
      "src": ".*\\.css",
      "dest": "/$1"
    },
    {
      "src": ".*\\.png",
      "dest": "/$1"
    },
    {
      "src": ".*\\.jpg",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
